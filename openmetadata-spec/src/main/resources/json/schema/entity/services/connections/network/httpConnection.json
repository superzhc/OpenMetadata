{
  "$id": "https://open-metadata.org/schema/entity/services/connections/mlmodel/mlflowConnection.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HttpConnection",
  "description": "Http Connection Config",
  "type": "object",
  "javaType": "org.openmetadata.schema.services.connections.network.HttpConnection",
  "definitions": {
    "httpType": {
      "description": "Service type.",
      "type": "string",
      "enum": [
        "Http"
      ],
      "default": "Http"
    },
    "httpMethodType": {
      "description": "Http method type.",
      "type": "string",
      "enum": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE"
      ],
      "default": "GET"
    },
    "authType": {
      "description": "Authorization Type",
      "type": "string",
      "enum": [
        "NoAuth",
        "BasicAuth",
        "BearerToken",
        "JWTBearer",
        "DigestAuth",
        "OAuth1_0",
        "OAuth2_0",
        "HawkAuthentication",
        "AWSSignature",
        "NTLMAuthentication",
        "APIKey",
        "AkamaiEdgeGrid",
        "ASAP"
      ]
    },
    "basicAuth": {
      "type": "object",
      "properties": {
        "username": {
          "title": "Username",
          "type": "string"
        },
        "password": {
          "title": "Password",
          "type": "string",
          "format": "password"
        }
      }
    },
    "bearerToken": {
      "type": "object",
      "properties": {
        "token": {
          "title": "Token",
          "type": "string",
          "format": "password"
        }
      }
    }
  },
  "properties": {
    "type": {
      "title": "Service Type",
      "description": "Service Type",
      "$ref": "#/definitions/httpType",
      "default": "Http"
    },
    "protocol": {
      "title": "Protocol",
      "description": "Request Protocol",
      "type": "string",
      "enum": ["HTTP","HTTPS"],
      "default": "HTTP"
    },
    "hostPort": {
      "title": "HostPort",
      "description": "Request Host and Port",
      "type": "string"
    },
    "path": {
      "title": "Path",
      "description": "Request Path",
      "type": "string"
    },
    "method": {
      "title": "Method",
      "description": "Request Method",
      "$ref": "#/definitions/httpMethodType",
      "default": "GET"
    },
    "authorization": {
      "type": "object",
      "properties": {
        "type": {
          "title": "Type",
          "$ref": "#/definitions/authType"
        },
        "config": {
          "title": "Auth Configuration",
          "oneOf": [
            {
              "$ref": "#/definitions/basicAuth"
            },
            {
              "$ref": "#/definitions/bearerToken"
            }
          ],
          "default": null
        }
      }
    },
    "headers": {
      "title": "Headers",
      "description": "Request Headers",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "query": {
      "title": "Query Parameters",
      "description": "Request Query Parameters",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "body": {
      "title": "Body",
      "description": "Request Body",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "protocol",
    "hostPort"
  ]
}
